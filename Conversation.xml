<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.example.shopwithme.Message" 
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/conversationTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Conversation" 
        android:textSize="30sp"
        android:layout_marginBottom="10dp"/>
    
    <TextView 
        android:id="@+id/userMaryPost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mary: Goin to shop for shoes. Anyone want to join?"
        android:textSize="20sp"
        />
    
    <TextView 
        android:id="@+id/userNickReply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nick: Yes! What time and where?"
        android:textSize="20sp"
        />
    
    <TextView 
        android:id="@+id/userSarahReply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sarah: I would like to go too!"
        android:textSize="20sp"
        />
    
    <EditText 
        android:id="@+id/replyBox"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:hint="Reply here..."
    	android:textSize="20sp"
    	android:imeOptions="actionDone"
    	/>
    
    <Button 
        android:id="@+id/ReplySubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit" 
        />
       
    
</LinearLayout>
