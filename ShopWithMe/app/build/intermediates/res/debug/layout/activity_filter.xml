<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E2F2FA"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.shopwithme.FilterActivity" >

     <TextView
        android:id="@+id/Filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="@string/Filter"
        android:fontFamily="sans-serif"
        android:textAppearance="?android:attr/textAppearanceLarge" />

	<RelativeLayout
        android:id="@+id/FilterPanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="82dp" >
        
    	<TextView
            android:id="@+id/BudgetLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="@string/Budget" 
            android:textAppearance="?android:attr/textAppearanceMedium"/>

    	<CheckBox
       		android:id="@+id/PriceBox_1"
        	android:layout_width="70dp"
        	android:layout_height="wrap_content"
        	android:layout_marginStart="20dp"
        	android:layout_below="@+id/BudgetLabel"
        	android:text="@string/$" />
    
    	<CheckBox
        	android:id="@+id/PriceBox_2"
        	android:layout_width="70dp"
        	android:layout_height="wrap_content"
        	android:layout_marginStart="20dp"
        	android:layout_below="@+id/BudgetLabel"
        	android:layout_toEndOf="@+id/PriceBox_1"
        	android:text="@string/$$" />
    
    	<CheckBox
        	android:id="@+id/PriceBox_3"
        	android:layout_width="70dp"
        	android:layout_height="wrap_content"
        	android:layout_marginStart="20dp"
        	android:layout_below="@+id/BudgetLabel"
        	android:layout_toEndOf="@+id/PriceBox_2"
        	android:text="@string/$$$" />
    
    	<TextView
            android:id="@+id/CatogoryLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_below="@+id/PriceBox_1"
            android:text="@string/Catoroty" 
            android:textAppearance="?android:attr/textAppearanceMedium"/>
    
    	<CheckBox
        	android:id="@+id/CatogoryBox_1"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_marginStart="20dp"
        	android:layout_below="@+id/CatogoryLabel"
        	android:text="@string/clothing" />
    
    	<CheckBox
        	android:id="@+id/CatogoryBox_2"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_marginStart="20dp"
        	android:layout_below="@+id/CatogoryBox_1"
        	android:text="@string/food" />
    
    	<CheckBox
        	android:id="@+id/CatogoryBox_3"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_marginStart="20dp"
        	android:layout_below="@+id/CatogoryBox_2"
        	android:text="@string/music" />
    
    	<CheckBox
        	android:id="@+id/CatogoryBox_4"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_marginStart="20dp"
        	android:layout_below="@+id/CatogoryBox_3"
        	android:text="@string/souvenir" />
    
     	<TextView
            android:id="@+id/LocationLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_below="@+id/CatogoryBox_4"
            android:text="@string/Location" 
            android:textAppearance="?android:attr/textAppearanceMedium"/>
     	
     	<Spinner
	    	android:id="@+id/spinner1"
	    	android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:layout_marginStart="20dp"
	    	android:layout_below="@+id/LocationLabel"
	    	android:entries="@array/city_arrays"
            android:prompt="@string/city_prompt"  />

	</RelativeLayout>

	

	<Button
	    android:id="@+id/SubmitFilterButton"
	    style="?android:attr/buttonStyleSmall"
	    android:layout_width="100dp"
	    android:layout_height="40dp"
	    android:layout_alignParentBottom="true"
	    android:onClick="BackToHome"
	    android:text="@string/Submit" />

</RelativeLayout>
