<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff700"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.shopwithme.FilterActivity" >

    <ImageView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/filtertitle"
        android:padding="0dp"
        android:layout_centerHorizontal="true"
        />

	<RelativeLayout
        android:id="@+id/FilterPanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="82dp" >
        
    	<TextView
            android:id="@+id/budgetLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Budget"
            android:textSize="20sp"
            android:fontFamily="sans-serif"
            android:textStyle="bold|italic"/>

        <Spinner
            android:id="@+id/budgetFilterSpinner"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_below="@id/budgetLabel"
            android:background="@drawable/texteditbackground"/>

    
    	<TextView
            android:id="@+id/categoryLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"
            android:layout_below="@id/budgetFilterSpinner"
            android:text="Category"
            android:textSize="20sp"
            android:fontFamily="sans-serif"
            android:textStyle="bold|italic"/>

        <Spinner
            android:id="@+id/categoryFilterSpinner"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_below="@id/categoryLabel"
            android:background="@drawable/texteditbackground"/>

        <TextView
            android:id="@+id/locationLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"
            android:layout_below="@id/categoryFilterSpinner"
            android:text="Location"
            android:textSize="20sp"
            android:fontFamily="sans-serif"
            android:textStyle="bold|italic"/>

        <Spinner
            android:id="@+id/locationFilterSpinner"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_below="@id/locationLabel"
            android:background="@drawable/texteditbackground"/>

	</RelativeLayout>

	

	<Button
	    android:id="@+id/SubmitFilterButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/roundbutton"
        android:layout_gravity="center_horizontal"
        android:onClick="BackToHome"
	    android:text="@string/Submit"

        android:textColor="#ffffff"
        android:layout_below="@+id/FilterPanel"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp" />

</RelativeLayout>
