<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E2F2FA"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.shopwithme.HomeScreenActivity" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingLeft="15dp"
        android:textSize="30dp"
        android:fontFamily="sans-serif"
        android:textStyle="italic"
        android:text="See who's shopping!!!"/>
 	
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="20dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center_horizontal">

                <RelativeLayout>
                    <ImageView
                        android:id="@+id/user_image_1"
                        android:src="@drawable/user_1"
                        android:layout_marginLeft="10dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />

                    <RelativeLayout
                        android:layout_width="250dp"
                        android:layout_height="80dp"
                        android:background="#FFFFCC"
                        android:layout_toRightOf="@id/user_image_1"
                        android:layout_marginLeft="20dp">

                        <TextView
                            android:id="@+id/name_1"
                            android:layout_width="40dp"
                            android:layout_height="15dp"
                            android:textColor="#0066FF"
                            android:textStyle="italic"
                            android:text="Sue"/>

                        <TextView
                            android:id="@+id/post_1"
                            android:layout_width="250dp"
                            android:layout_height="50dp"
                            android:layout_below="@id/name_1"
                            android:text="I need to shop for some shoes. Would anyone like to join?" />

                        <ImageButton
                            android:id="@+id/reply_1"
                            android:layout_width="30dp"
                            android:layout_height="15dp"
                            android:layout_below="@id/post_1"
                            android:layout_alignRight="@id/post_1"
                            android:background="@drawable/reply" />
                    </RelativeLayout>
                </RelativeLayout>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center_horizontal">

                <RelativeLayout>
                    <ImageView
                        android:id="@+id/user_image_2"
                        android:src="@drawable/user_2"
                        android:layout_marginLeft="10dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />

                    <RelativeLayout
                        android:layout_width="250dp"
                        android:layout_height="80dp"
                        android:background="#FFFFCC"
                        android:layout_toRightOf="@id/user_image_2"
                        android:layout_marginLeft="20dp">

                        <TextView
                            android:id="@+id/name_2"
                            android:layout_width="40dp"
                            android:layout_height="15dp"
                            android:textColor="#0066FF"
                            android:textStyle="italic"
                            android:text="Nick"/>

                        <TextView
            		        android:id="@+id/post_2"
                            android:layout_width="250dp"
                            android:layout_height="50dp"
                            android:layout_below="@id/name_2"
            		        android:text="I'm looking for some good music. Anyone want to go to a record store?" />

                        <ImageButton
                            android:id="@+id/reply_2"
                            android:layout_width="30dp"
                            android:layout_height="15dp"
                            android:layout_below="@id/post_2"
                            android:layout_alignRight="@id/post_2"
                            android:background="@drawable/reply" />
                    </RelativeLayout>
                </RelativeLayout>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center_horizontal">

                <RelativeLayout>
                    <ImageView
                        android:id="@+id/user_image_3"
                        android:src="@drawable/user_3"
                        android:layout_marginLeft="10dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />

                    <RelativeLayout
                        android:layout_width="250dp"
                        android:layout_height="80dp"
                        android:background="#FFFFCC"
                        android:layout_toRightOf="@id/user_image_3"
                        android:layout_marginLeft="20dp">


                    <TextView
                        android:id="@+id/name_3"
                        android:layout_width="40dp"
                        android:layout_height="15dp"
                        android:textColor="#0066FF"
                        android:textStyle="italic"
                        android:text="Mary"/>

                    <TextView
            		    android:id="@+id/post_3"
                        android:layout_width="250dp"
                        android:layout_height="50dp"
                        android:layout_below="@id/name_3"
            		    android:text="Anyone want to go clothes shopping? I found a new store on Liberty." />

                        <ImageButton
                            android:id="@+id/reply_3"
                            android:layout_width="30dp"
                            android:layout_height="15dp"
                            android:layout_below="@id/post_3"
                            android:layout_alignRight="@id/post_3"
                            android:background="@drawable/reply" />
                    </RelativeLayout>
                </RelativeLayout>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center_horizontal">

                <RelativeLayout>
                    <ImageView
                        android:id="@+id/user_image_4"
                        android:src="@drawable/user_4"
                        android:layout_marginLeft="10dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />

                    <RelativeLayout
                        android:layout_width="250dp"
                        android:layout_height="80dp"
                        android:background="#FFFFCC"
                        android:layout_toRightOf="@id/user_image_4"
                        android:layout_marginLeft="20dp">


                        <TextView
                            android:id="@+id/name_4"
                            android:layout_width="40dp"
                            android:layout_height="15dp"
                            android:textColor="#0066FF"
                            android:textStyle="italic"
                            android:text="Jason"/>

                        <TextView
                            android:id="@+id/post_4"
                            android:layout_width="250dp"
                            android:layout_height="50dp"
                            android:layout_below="@id/name_4"
                            android:text="I want to find some good cajun food. Anyone want to check out midtown with me?" />

                        <ImageButton
                            android:id="@+id/reply_4"
                            android:layout_width="30dp"
                            android:layout_height="15dp"
                            android:layout_below="@id/post_4"
                            android:layout_alignRight="@id/post_4"
                            android:background="@drawable/reply" />

                    </RelativeLayout>
                </RelativeLayout>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center_horizontal">

                <RelativeLayout>
                    <ImageView
                        android:id="@+id/user_image_5"
                        android:src="@drawable/user_5"
                        android:layout_marginLeft="10dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp"/>

                    <RelativeLayout
                        android:layout_width="250dp"
                        android:layout_height="80dp"
                        android:background="#FFFFCC"
                        android:layout_toRightOf="@id/user_image_5"
                        android:layout_marginLeft="20dp">

                        <TextView
                            android:id="@+id/name_5"
                            android:layout_width="40dp"
                            android:layout_height="15dp"
                            android:textColor="#0066FF"
                            android:textStyle="italic"
                            android:text="Mike"/>

                        <TextView
                            android:id="@+id/post_5"
                            android:layout_width="250dp"
                            android:layout_height="50dp"
                            android:layout_below="@id/name_5"
                            android:text="I'm looking for some good music. Anyone want to go to a record store?" />

                        <ImageButton
                            android:id="@+id/reply_5"
                            android:layout_width="30dp"
                            android:layout_height="15dp"
                            android:layout_below="@id/post_5"
                            android:layout_alignRight="@id/post_5"
                            android:background="@drawable/reply" />
                    </RelativeLayout>
                </RelativeLayout>
            </TableRow>

        </TableLayout>

    </ScrollView>

</LinearLayout>
