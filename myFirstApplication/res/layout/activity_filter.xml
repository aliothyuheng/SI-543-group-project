<!-- Created by Yuheng Chen -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.myfirstapplication.FilterActivity" >

    <TextView
        android:id="@+id/Filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="Filter"
        android:textAppearance="?android:attr/textAppearanceLarge" />

<RelativeLayout
        android:id="@+id/FilterPanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="82dp" >
        
    <TextView
            android:id="@+id/BudgetLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Budget" 
            android:textAppearance="?android:attr/textAppearanceMedium"/>

    <CheckBox
        android:id="@+id/PriceBox_1"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/BudgetLabel"
        android:text="$" />
    
    <CheckBox
        android:id="@+id/PriceBox_2"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/BudgetLabel"
        android:layout_toRightOf="@+id/PriceBox_1"
        android:text="$$" />
    
    <CheckBox
        android:id="@+id/PriceBox_3"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/BudgetLabel"
        android:layout_toRightOf="@+id/PriceBox_2"
        android:text="$$$" />
    
    <TextView
            android:id="@+id/CatogoryLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/PriceBox_1"
            android:text="Catoroty" 
            android:textAppearance="?android:attr/textAppearanceMedium"/>
    
    <CheckBox
        android:id="@+id/CatogoryBox_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/CatogoryLabel"
        android:text="Clothing" />
    
    <CheckBox
        android:id="@+id/CatogoryBox_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/CatogoryBox_1"
        android:text="food" />
    
    <CheckBox
        android:id="@+id/CatogoryBox_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/CatogoryBox_2"
        android:text="music" />
    
    <CheckBox
        android:id="@+id/CatogoryBox_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/CatogoryBox_3"
        android:text="souvenir" />
    
     <TextView
            android:id="@+id/LocationLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/CatogoryBox_4"
            android:text="Location" 
            android:textAppearance="?android:attr/textAppearanceMedium"/>
     
     <CheckBox
        android:id="@+id/LocationBox_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/LocationLabel"
        android:text="Ann Arbor" />
    
    <CheckBox
        android:id="@+id/LocationBox_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/LocationBox_1"
        android:text="New York" />
    
    <CheckBox
        android:id="@+id/LocationBox_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/LocationBox_2"
        android:text="Los Angeles" />

    <Button
        android:id="@+id/SubmitFilterButton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/LocationBox_3"
        android:layout_toRightOf="@+id/PriceBox_2"
        android:text="Submit" 
        android:onClick="BackToHome"/>

</RelativeLayout>

</RelativeLayout>
