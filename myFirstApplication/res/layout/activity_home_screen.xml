<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.myfirstapplication.HomeScreenActivity" >

    <TextView
        android:id="@+id/Home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="Home"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <RelativeLayout
        android:id="@+id/PostContainer_1"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="82dp" >

        <TextView
            android:id="@+id/Post_1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Mary:I wants to go shopping" />

        <Button
            android:id="@+id/Message_1"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/Post_1"
            android:text="Message"
            android:onClick="MessageScreen"/>
        
        <Button
            android:id="@+id/Reply_1"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_toRightOf="@+id/Message_1"
            android:layout_below="@+id/Post_1"
            android:text="Reply"
            android:onClick="ConversationScreen"/>
        
        <Button
            android:id="@+id/Profile_1"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_toRightOf="@+id/Reply_1"
            android:layout_below="@+id/Post_1"
            android:text="Profile" />
    </RelativeLayout>

    
    <RelativeLayout
        android:id="@+id/PostContainer_2"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/PostContainer_1" >
            
        <TextView
            android:id="@+id/Post_2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Sue:I wants to shop for shoes" />

        <Button
            android:id="@+id/Message_2"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/Post_2"
            android:text="Message"
            android:onClick="MessageScreen"/>

        <Button
            android:id="@+id/Reply_2"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_below="@+id/Post_2"
            android:layout_toRightOf="@+id/Message_2"
            android:text="Reply"
            android:onClick="ConversationScreen"/>

        <Button
            android:id="@+id/Profile_2"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_below="@+id/Post_2"
            android:layout_toRightOf="@+id/Reply_2"
            android:text="Profile" />
    </RelativeLayout>
 
    
	<RelativeLayout
        android:id="@+id/PostContainer_3"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/PostContainer_2" >     
        
        <TextView
            android:id="@+id/Post_3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Susan: Anyone wants to shop for clothes?" />

        <Button
            android:id="@+id/Message_3"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/Post_3"
            android:text="Message"
            android:onClick="MessageScreen" />

        <Button
            android:id="@+id/Reply_3"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_below="@+id/Post_3"
            android:layout_toRightOf="@+id/Message_3"
            android:text="Reply"
            android:onClick="ConversationScreen"/>

        <Button
            android:id="@+id/Profile_3"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_below="@+id/Post_3"
            android:layout_toRightOf="@+id/Reply_3"
            android:text="Profile" />
    </RelativeLayout>

	<Button
	    android:id="@+id/homeButton"
	    android:layout_width="80dp"
	    android:layout_height="40dp"
	    android:layout_alignParentBottom="true"
	    android:layout_alignParentLeft="true"
	    android:layout_marginLeft="10dp"
	    android:text="Home" />
	
	<Button
	    android:id="@+id/newPostButton"
	    android:layout_width="80dp"
	    android:layout_height="40dp"
	    android:layout_alignParentBottom="true"
	    android:layout_toRightOf="@+id/homeButton"
	    android:layout_marginLeft="10dp"
	    android:text="Post"
        android:onClick="NewPostScreen"/>

	<Button
	    android:id="@+id/newProfileButton"
	    android:layout_width="80dp"
	    android:layout_height="40dp"
	    android:layout_alignParentBottom="true"
	    android:layout_toRightOf="@+id/newPostButton"
	    android:layout_marginLeft="10dp"
	    android:text="Profile" />

	<Button
	    android:id="@+id/filerButton"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignBaseline="@+id/Home"
	    android:layout_alignBottom="@+id/Home"
	    android:layout_alignParentRight="true"
	    android:text="Filter"
	    android:onClick="Filter" />

	

</RelativeLayout>
